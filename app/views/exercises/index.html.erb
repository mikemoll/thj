<h1>Listing exercises</h1>

<table>
  <thead>
    <tr>
      <th>Excerise type</th>
      <th>Load prescribed</th>
      <th>Sets prescribed</th>
      <th>Reps prescribed</th>
      <th>Actual reps set 1</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.excerise_type %></td>
        <td><%= exercise.load_prescribed %></td>
        <td><%= exercise.sets_prescribed %></td>
        <td><%= exercise.reps_prescribed %></td>
        <td><%= exercise.actual_reps_set_1 %></td>
        <td><%= exercise.user %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

