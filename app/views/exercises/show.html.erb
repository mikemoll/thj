<%- model_class = Exercise -%>
<div class="page-header">
  <h1><%=t '.title', :default => Exercise %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:excerise_type) %></dt>
      <dd><pre class="prettyprint"><%= @exercise.excerise_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:load_prescribed) %></dt>
      <dd><pre class="prettyprint"><%= @exercise.load_prescribed %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sets_prescribed) %></dt>
      <dd><pre class="prettyprint"><%= @exercise.sets_prescribed %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reps_prescribed) %></dt>
      <dd><pre class="prettyprint"><%= @exercise.reps_prescribed %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:actual_reps_set_1) %></dt>
      <dd><pre class="prettyprint"><%= @exercise.actual_reps_set_1 %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              exercises_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_exercise_path(@exercise), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              exercise_path(@exercise),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

